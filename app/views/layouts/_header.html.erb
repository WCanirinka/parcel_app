<header class = "navbar navbar-inverse navbar-fixed-top" >
  <div class = "container">
    <%= link_to "parceltrack", root_path, id: "logo" %>
    <nav>
      <ul class = "nav navbar-nav navbar-right">
      <% if current_user %>
        
        <% if current_user.admin? %>
        <li><%= link_to "Add Parcels", new_parcel_path %></li>
        <% end %>
        <li><%= link_to "Search", search_path %></li>
        <li><%= link_to "User profile", edit_user_path(current_user) %></li>
        <li><%= link_to "Sign Out", signout_path, id: "sign_out" %></li>


      <% else %>
        <li><%= link_to "Admin login", login_path %></li>
      <% end %>
        </ul>
    </nav>
  </div>
</header>